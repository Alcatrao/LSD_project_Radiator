library IEEE;
use IEEE.STD_LOGIC_1164.all;
use IEEE.NUMERIC_STD.all;

entity bin2bcd is
	port(bin_In	: 		in  std_logic_vector(5 downto 0);
		  bcd_out	: 	out std_logic_vector(7 downto 0));
end bin2bcd;

architecture Behavioral of bin2bcd is

	signal numero_todo : natural;
	signal s_digito1 : natural;
	signal s_digito2 : natural;

begin

	numero_todo <= to_integer(unsigned(bin_In));
	s_digito1 <= numero_todo / 10;
	s_digito2 <= numero_todo REM 10;
	
	bcd_out(7 downto 4) <= std_logic_vector(to_unsigned(s_digito1, 4));
	bcd_out(3 downto 0) <= std_logic_vector(to_unsigned(s_digito2, 4));
	
end Behavioral;
		